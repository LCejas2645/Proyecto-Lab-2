                    button(type="button", id="agregarValor" class="btn btn-primary") +
            div.container#valoresContainer(style="display:flex;justify-content:space-around")
            div.container(style="display:flex;justify-content:space-around;width:700px")
                button(type="submit" class="btn btn-success") cargar Determinacion
            //button(type="submit") Finalizar

            script.
                const examenForm = document.getElementById("examenForm");
                const determinacionesContainer = document.getElementById("determinacionesContainer");
                const agregarValor = document.getElementById("agregarValor");
                let muestraCount=0;
                agregarValor.addEventListener("click", function () {
                    muestraCount++
                    const containerVal = document.createElement("div"); 
                    const valor = document.createElement("div"); 

                    const valorDiv = document.createElement("div");
                    valorDiv.id = "valor";
                    valorDiv.innerHTML = '<label for="categoria">Categoria :</label>' +
                    '<input class="form-control" style="display:flex;justify-content:space-around" type="text" id="muestra_' + muestraCount + '" name="categoria">'+
                    '<label for="valorMin">Valor Min :</label>' +
                    '<input class="form-control" style="display:flex;justify-content:space-around" type="text" id="muestra_' + muestraCount + '" name="valorMin">'+
                    '<label for="valorMax">Valor Max :</label>' +
                    '<input class="form-control" style="display:flex;justify-content:space-around" type="text" id="muestra_' + muestraCount + '" name="valorMax">';
                    valoresContainer.appendChild(containerVal);
                    containerVal.appendChild(valorDiv);
                });
