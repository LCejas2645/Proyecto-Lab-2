    div.container(style="display:flex; max-width:100%;background-color:ivory;padding:0px")
       
        div.class.alert.alert-primary.alert-dismissible.fade.show(style="padding: 10px; background-color: #212529; width:30%")
            h1(style="color:white") Determinaciones
            table.table.table-striped
                thead
                    tr
                    th(scope="col") ID
                    th(scope="col") Descripcion
                    th(scope="col") Valor Referencia
                    th(scope="col") Editar
                tbody
                    each determinacion in determinaciones       
                        tr
                            td=  determinacion.id
                            td=  determinacion.descripcion
                            td                            
                                form(action=`/editarDeterminacionV/${determinacion.id}`, method="get") 
                                    button(type="submit" class="btn btn-primary") editar
                            td  
                                form(action=`/editarDeterminacion/${determinacion.id}`, method="get") 
                                    button(type="submit" class="btn btn-primary") editar
