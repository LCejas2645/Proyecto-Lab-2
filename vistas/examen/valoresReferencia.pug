    div.container 
        h1 ingrese un valor de referencia para esa determinacion
    div.container
        form(action="/nuevoValor", method="post")
            div.miform
                input(name="determinacionId" type="hidden" value=`${detaobj.id}`)
                div.input-group.mb-3(style = "width:  300px;")
