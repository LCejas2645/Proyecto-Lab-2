                        span.input-group-text#inputGroup-sizing-default categoria
                    input.form-control(name="categoria" id="categoria" type="text", aria-label="Default", aria-describedby="inputGroup-sizing-default")
                div.input-group.mb-3(style = "width:  300px;")
                    div.input-group-prepend
                        span.input-group-text#inputGroup-sizing-default valor min
                    input.form-control(name="valorMin" id="valorMin" type="text", aria-label="Default", aria-describedby="inputGroup-sizing-default")
                div.input-group.mb-3(style = "width:  300px;")
                    div.input-group-prepend
                        span.input-group-text#inputGroup-sizing-default valor max
                    input.form-control(name="valorMax" id="valorMax" type="text", aria-label="Default", aria-describedby="inputGroup-sizing-default")
            div.container    
