    body 
        nav.navbar.navbar-expand-sm.navbar-dark.bg-dark(aria-label="Third navbar example")
            div.container-fluid
                a.navbar-brand(href="#") HOME
                button.navbar-toggler(type="button", data-bs-toggle="collapse", data-bs-target="#navbarsExample03", aria-controls="navbarsExample03", aria-expanded="false", aria-label="Toggle navigation")
                    span.navbar-toggler-icon
                div.collapse.navbar-collapse#navbarsExample03
                    ul.navbar-nav.me-auto.mb-2.mb-sm-0
                       li.nav-item
                           a.nav-link.active(aria-current="page", href="/") Pacientes
                       li.nav-item
                           a.nav-link(href="#") Ordenes
                       //li.nav-item
                           a.nav-link.disabled(aria-disabled="true") Disabled
                       //li.nav-item.dropdown
                           a.nav-link.dropdown-toggle(href="#", data-bs-toggle="dropdown", aria-expanded="false") Dropdown
        div.container
            form(action="/agregar", method="post")
                div.miform
                    div.input-group.mb-3(style = "width:  300px;")
                        div.input-group-prepend
                            span.input-group-text#inputGroup-sizing-default Nombre
                        input.form-control(name="nombreCompleto" id="nombreCompleto" type="text", aria-label="Default", aria-describedby="inputGroup-sizing-default")
                    div.input-group.mb-3(style = "width:  300px;")
                        div.input-group-prepend
                            span.input-group-text#inputGroup-sizing-default DNI
                        input.form-control(type="text" name="dni" id="dni", aria-label="Default", aria-describedby="inputGroup-sizing-default")    
                    div.input-group.mb-3(style = "width:  300px;")
                        div.input-group-prepend
                            span.input-group-text#inputGroup-sizing-default Sexo 
                        select.form-control(id="sexo" name="sexo") 
                                option(selected value="Masculino") Masculino
                                option(value="Femenino") Femenino
                                option(value="Otro") Otro
                    div.input-group.mb-3(style = "width:  300px;")
                        div.input-group-prepend
                            span.input-group-text#inputGroup-sizing-default Edad
                        input.form-control(name="edad", id="edad" type="text", aria-label="Default", aria-describedby="inputGroup-sizing-default")
                    div.input-group.mb-3(style = "width:  300px;")
                        div.input-group-prepend
                            span.input-group-text#inputGroup-sizing-default Email
                        input.form-control(name="mail", id="mail" type="text", aria-label="Default", aria-describedby="inputGroup-sizing-default")
                    div.input-group.mb-3(style = "width:  300px;")
                        div.input-group-prepend
                            span.input-group-text#inputGroup-sizing-default Embarazo
                        input(name="embarazo" type="checkbox" id="embarazo" value= style="width: 70;height: 22;") 
                        //input.form-control(name="embarazo", id="embarazo" type="text" value=`${pacienteId.embarazo}`, aria-label="Default", aria-describedby="inputGroup-sizing-default")
                    div.input-group.mb-3(style = "width:  300px;")
                        div.input-group-prepend
                            span.input-group-text#inputGroup-sizing-default Patologia pre existente
                        input.form-control(name="patologiaPre", id="patologiaPre" type="text", aria-label="Default", aria-describedby="inputGroup-sizing-default")
                div.container(style="display:flex;justify-content: center;")
                    button(type="submit" class="btn btn-primary" ) Agregar Nuevo paciente 
