    head 
        title Agregar nuevo paciente
        link(rel="canonical" href="https://getbootstrap.com/docs/5.3/examples/navbars/")
        link(rel="stylesheet" href="https://cdn.jsdelivr.net/npm/@docsearch/css@3")
