    h1 Búsqueda de Datos
    form(action="/buscar" method="get")
      label(for="nombre") Nombre:
      input(type="text" name="nombre" id="nombre")
      br
      label(for="dni") DNI:
      input(type="text" name="dni" id="dni")
      br
      button(type="submit") Buscar
      br
    - if (pacientes.length === 0)  // Verifica si pacientes está vacío y Muestra el botón "Agregar" si pacientes está vacío
      button(type="submit") 
        a(href="/agregar" style = "text-decoration: none; color: black") Agregar nuevo  
    -else
      table
        thead
          tr
            
            th Nombre
            th DNI
            th Actualizar
        tbody
          each paciente in pacientes
            tr
              input(type="hidden" name="id" value=`${paciente.id}`)
              td= paciente.nombreCompleto
              td= paciente.dni
              td  
                button(type="submit") 
                  a(href=`/actualizar/${paciente.id}` style = "text-decoration: none; color: black") Actualizar
    div.container(style = "padding:  40px; max-width: 412px")
      div.input-group.mb-3(style = "width:  300px;")
        div.input-group-prepend
